<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Things To Do</title>

    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .footer {
            background-color: #FFD700;
            /* Background color for the footer */
            padding: 5px 0;
            /* Add padding to the top and bottom */
            text-align: center;
            /* Center-align the content */
        }
    </style>
</head>

<body>
    <!-- https://stackoverflow.com/a/40652080/10908060 -->
    <%- include('navbar.ejs', {activeUser: activeUser}); %>

        <!-- Code Block take and adapted from: https://startbootstrap.com/template/shop-item-->
        <!-- https://github.com/startbootstrap/startbootstrap-shop-item
        <!-- Item -->

        <% products.forEach(product=> { %>
            <section class="py-5">
                <div class="container px-4 px-lg-5 my-5">
                    <div class="row gx-4 gx-lg-5 align-items-center">
                        <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="<%= product.Product_Image %>"
                                alt="<%= product.Product_Name %>" /></div>
                        <div class="col-md-6">
                            <div class="small mb-1">ID: <%= product.Product_ID %>
                            </div>
                            <h1 class="display-4 fw-bolder" style="font-size: 2rem;">
                                <%= product.Product_Name %>
                            </h1>
                            <div class="fs-5 mb-5">
                                <span class="text-decoration-line-through">€ <%= product.Original_Price %></span>
                                <span>€ <%= product.Price %></span>
                            </div>
                            <p class="lead">
                                <%= product.Product_Description %>
                            </p>
                            <div class="d-flex">
                                <input class="form-control text-center me-3" id="inputQuantity_<%=product.Product_ID%>"
                                    type="num" value="1" style="max-width: 3rem" />

                                <!-- This button when clicked will use the product id to add it to cart.
                                    ejs template to access variable is '<$= variable name %>' enclosed in single quotes
                                -->
                                <button value="<%= product %>" onclick="init('<%=product.Product_ID%>')"
                                    class="btn btn-outline-dark flex-shrink-0" type="button">
                                    <i class="bi-cart-fill me-1"></i>
                                    Add to cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <hr>
            <% }); %>
                <!-- End of Code Block -->


                <br>
                <br>


                <footer class="footer">
                    <div class="container">
                        <p>&copy; 2024 AURUM</p>
                    </div>
                </footer>

                <!-- Latest compiled and minified JavaScript -->
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                    crossorigin="anonymous"></script>

                <script src="js/cart.js"></script>

</body>

</html>