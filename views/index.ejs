        <!-- Latest compiled and minified JavaScript from Bootstrap -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>


        <!-- JS -->
        <script>
            // Newsletter JS
            const newsletterForm = document.getElementById("newsletterForm");
            newsletterForm.addEventListener("submit", (event) => {
                event.preventDefault();

                const formData = new FormData(event.target);
                const email = formData.get("email");

                fetch("subscribe", {
                    method: "POST",
                    body: JSON.stringify({
                        email: email
                    }),
                    headers: {
                        "Content-type": "application/json; charset=UTF-8"
                    }
                }).then((response) => {
                    //https://stackoverflow.com/a/36226266/10908060
                    if(response.ok){
                        alert("Success! You have signed up!");
                        newsletterForm.reset();
                    }
                    else {
                        throw new Error('Something went wrong.');
                    }
                }).catch((response) => {
                    alert("Sorry, your email exists or it could not be added");
                })

                // here you can show something on submit or do whatever you want
            });

            // Carousel JS 

            document.addEventListener("DOMContentLoaded", function () {
                // Get the carousel element
                var myCarousel = document.getElementById('carousel');

                // Generate a random index between 0 and the number of carousel items
                var randomIndex = Math.floor(Math.random() * myCarousel.querySelectorAll('.carousel-item').length);

                // Activate the carousel with the random index
                var carousel = new bootstrap.Carousel(myCarousel, {
                    interval: 3000, // Set the interval to 3 seconds
                    wrap: false // Prevent wrapping at the end of the carousel
                });

                // Set the random item as active
                carousel.to(randomIndex);


            });
        </script>
        <!-- End of JS -->




